
 <h2>Word: <%= @word.word_input %></h2>

 <h3>Word Definitions</h3>
 
   <% if @word.definitions %>
     <ul>
       <% @word.definitions.each do |definition| %>
         <li><a href="/words/<%= @word.id %>/definitions/<%= definition.id %>"><%= definition.word_input %></a></li>
       <% end %>
     </ul>
   <% else %>
     <p>There are no defintions listed for this word yet.</p>
   <% end %>
 
 <h4>Add a definition:</h4>
 
 <form action="/words/<%= @word.id %>/definitions" method="post">
   <div class="form-group">
     <label for="definition_input">Your definition</label>
     <input id="definition_input" name="definition_input" class="form-control" type="text">
   </div>
   <button type="submit" class="btn">Add definition</button>
 </form>
 
 
 
 <p><a href="/words/<%= @word.id %>/edit">Edit word</a></p>
 <p><a href="/albums">Return to word list</a></p>